{
  "version": 2,
  "name": "ai-token-finder",
  "builds": [
    {
      "src": "front/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "front/dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api_server.py"
    },
    {
      "src": "/(.*)",
      "dest": "/front/dist/$1"
    }
  ],
  "functions": {
    "api_server.py": {
      "runtime": "python3.9"
    }
  },
  "env": {
    "PYTHONPATH": "."
  },
  "installCommand": "cd front && npm install",
  "buildCommand": "cd front && npm run build",
  "outputDirectory": "front/dist"
}
